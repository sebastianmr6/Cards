<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="maui_cards.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:maui_cards"
    xmlns:views="clr-namespace:maui_cards.Views" 
    Shell.FlyoutBehavior="Flyout"
    Title="maui_cards">

    <!-- xmlns:views="clr-namespace:maui_cards.Views" es usado para llamar a las pÃ¡ginas dentro del folder Views -->

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="ListView"
        ContentTemplate="{DataTemplate views:ListPage}"
        Route="ListPage" />

    <ShellContent
        Title="CollectionView"
        ContentTemplate="{DataTemplate views:CollectionViewPage}"
        Route="CollectionViewPage" />

</Shell>